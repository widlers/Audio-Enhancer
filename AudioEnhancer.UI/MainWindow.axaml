<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AudioEnhancer.UI.MainWindow"
        Title="Audio Enhancer AI"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e"
        DragDrop.AllowDrop="True">

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="5" Margin="0,0,0,20">
            <TextBlock Text="Audio AI Enhancer" FontSize="28" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Clean up and enhance audio files using AI" FontSize="14" Foreground="#aaaaaa" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Drop Zone / Main Area -->
        <Border Grid.Row="1" 
                Name="DropZone"
                BorderBrush="#444444" 
                BorderThickness="2" 
                CornerRadius="10" 
                Background="#252525"
                Margin="0,0,0,20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <TextBlock Text="Drag &amp; Drop Audio File Here" 
                           FontSize="18" 
                           Foreground="#888888" 
                           HorizontalAlignment="Center"/>
                <Button Name="BtnSelectFile" 
                        Content="Or Select File..." 
                        HorizontalAlignment="Center"
                        Padding="15,10"/>
                
                <TextBlock Name="TxtSelectedFile" 
                           Text="" 
                           Foreground="#00FF00" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           IsVisible="False"/>
            </StackPanel>
        </Border>

        <!-- Controls & Config -->
        <StackPanel Grid.Row="2" Spacing="10">
            <Grid ColumnDefinitions="*, Auto">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <CheckBox Name="ChkGpu" Content="Use GPU (CUDA)" IsChecked="True" Foreground="White"/>
                    <CheckBox Name="ChkConda" Content="Use Conda" IsChecked="True" Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Name="BtnSettings" Content="âš™ Settings" Background="#333333" Foreground="White"/>
                    <Button Name="BtnStart" Content="START ENHANCEMENT" FontWeight="Bold" Background="#007ACC" Foreground="White" Padding="20,10"/>
                </StackPanel>
            </Grid>
            
            <ProgressBar Name="ProgressBar" Minimum="0" Maximum="100" Height="20" IsVisible="False"/>
            <TextBlock Name="TxtStatus" Text="Ready" Foreground="#cccccc" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Log Output -->
        <Expander Grid.Row="3" Header="Logs" Margin="0,10,0,0" IsExpanded="False">
            <TextBox Name="TxtLog" 
                     Height="150" 
                     AcceptsReturn="True" 
                     TextWrapping="Wrap" 
                     IsReadOnly="True" 
                     FontFamily="Consolas, Monospace"
                     FontSize="12"
                     Background="#111111"
                     Foreground="#dddddd"/>
        </Expander>

    </Grid>
</Window>
